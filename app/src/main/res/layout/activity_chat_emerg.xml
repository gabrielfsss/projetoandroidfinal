<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txtMessageChatList"

        android:layout_width="match_parent"
        android:layout_height="45dp"

        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"

        android:background="@drawable/item_emerg_chat"
        android:padding="10dp"

        android:text="TextView"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:textColor="#FF1493"
        android:textSize="16sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/txtNameChat"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="TextView"
        android:textColor="#FFF"
        android:textSize="18sp"

        app:layout_constraintBottom_toTopOf="@+id/txtMessageChatList"
        app:layout_constraintEnd_toEndOf="@+id/txtMessageChatList"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>